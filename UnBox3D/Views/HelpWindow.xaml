<Window x:Class="UnBox3D.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnBox3D.Views"
        mc:Ignorable="d"
        Title="Help — UnBox3D"
        Height="600" Width="800"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource SurfaceBrush}">

    <!-- ScrollViewer allows the help content to scroll if it's longer than the window/adjust to window screen -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
			

            <!-- title -->
            <TextBlock Text="UnBox3D — Help"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <!-- brief summary of the program -->
            <TextBlock Text="UnBox3D is an application that converts complex 3D geometries into simplified 2D unfolded representations for precise laser-cutting. It allows you to explore and manipulate 3D objects using mouse and keyboard controls, making it easy to create ready-to-use 2D unfolded representations for assembling the physical model."
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="0 0 0 20"/>

            <!-- keyboard shortcuts and control functions -->
            <TextBlock Text="Keyboard Shortcuts &amp; Controls" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Margin="0 0 0 10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- left column: rows 0-4 -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Enter" Grid.Row="0" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Start rendering / begin session" Grid.Row="0" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Alt + O" Grid.Row="1" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Open project file" Grid.Row="1" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Alt + S" Grid.Row="2" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Open settings window" Grid.Row="2" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Esc" Grid.Row="3" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Exit current view or close dialog" Grid.Row="3" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Alt + F4" Grid.Row="4" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Close the application" Grid.Row="4" Grid.Column="1" Margin="5,2"/>
                </Grid>

                <!-- right column: rows 5-10 -->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="A / D" Grid.Row="0" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Move camera left / right" Grid.Row="0" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Space" Grid.Row="1" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Move camera up" Grid.Row="1" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Left Shift" Grid.Row="2" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Move camera down" Grid.Row="2" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="W / S" Grid.Row="3" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Zoom camera in / out" Grid.Row="3" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Q / E" Grid.Row="4" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Rolls camera left / right" Grid.Row="4" Grid.Column="1" Margin="5,2"/>
                </Grid>
            </Grid>

			<!-- mouse control function -->
            <TextBlock Text="Mouse Controls" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Margin="0 20 0 10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- left column: rows 0-4 -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Left Button" Grid.Row="0" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Select objects in hierarchy" Grid.Row="0" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Right Button" Grid.Row="1" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Press + hold - rotates the camera" Grid.Row="1" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Scroll Wheel" Grid.Row="2" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Zooms in / out" Grid.Row="2" Grid.Column="1" Margin="5,2"/>

                    <TextBlock Text="Scroll Wheel" Grid.Row="3" Grid.Column="0" Margin="0,2"/>
                    <TextBlock Text="Press + hold - pan camera (moves the camera left/right/up/down without rotating)" Grid.Row="3" Grid.Column="1" Margin="5,2" TextWrapping="Wrap"/>
                </Grid>
            </Grid>
            
            <!-- any tips -->
            <TextBlock Text="Tip: Press and hold the scroll wheel to rotate the camera while using A/D/Space/Left Shift to move it, allowing you to view objects from any angle." 
                       TextWrapping="Wrap" 
                       FontSize="13" 
                       Opacity="0.7" 
                       Margin="0 20 0 0"/>

            <!-- button functions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Back to Main Menu" Width="160" Margin="0 0 10 0" Click="Back_Click"/>
                <Button Content="Close" Width="100" Click="Close_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
