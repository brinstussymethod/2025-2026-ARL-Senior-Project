<Window x:Class="UnBox3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UnBox3D" Height="450" Width="800">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <!-- File Menu -->
            <MenuItem Header="File">
                <MenuItem Header="Import File..." Click="ImportFileMenu_Click"/>
                <MenuItem Header="Save File..." Click="SaveFileMenu_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitMenu_Click"/>
            </MenuItem>

            <!-- View Menu -->
            <MenuItem Header="View">
                <MenuItem Header="Wireframe Mode" IsCheckable="True" Click="WireframeMenu_Click"/>
                <MenuItem Header="Shaded Mode" IsCheckable="True" Click="ShadedMenu_Click"/>
            </MenuItem>

            <!-- Settings Window -->
            <MenuItem Header="Settings"/>

            <!-- About Us Menu -->
            <MenuItem Header="About Us" Click="AboutMenu_Click"/>
        </Menu>

        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- TreeView for Hierarchy -->
            <TreeView Name="MeshHierarchyView" Grid.Column="0" Margin="5"/>

            <!-- OpenTK Rendering Surface -->
            <WindowsFormsHost Name="openTKWindow" Grid.Column="1" Margin="5"/>
        </Grid>
    </DockPanel>
</Window>
